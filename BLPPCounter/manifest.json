{
  "$schema": "https://raw.githubusercontent.com/bsmg/BSIPA-MetadataFileSchema/master/Schema.json",
  "id": "BLPPCounter",
  "name": "BL PP Counter",
  "author": "Person",
  "version": "0.5.3",
  "description": "Adds a BeatLeader pp counter and a few other things.",
  "gameVersion": "1.29.1",
  "dependsOn": {
    "BSIPA": "^4.2.0",
    "SiraUtil": "^3.0.5",
    "Counters+": "^2.3.2",
    "BeatSaberMarkupLanguage": "^1.6.10",
    "BeatLeader": "^0.9.0"
  },
  "features": {
    "CountersPlus.CustomCounter": {
      "Name": "BL PP Counter",
      "Description": "It counts things",
      "CounterLocation": "BLPPCounter.TheCounter",
      "MultiplayerReady": true,
      "ConfigDefaults": {
        "Enabled": true,
        "Position": "AboveCombo",
        "Distance": 0
      },
      "BSML": {
        "Resource": "BLPPCounter.Settings.BSML.Settings.bsml",
        "Host": "BLPPCounter.Settings.SettingHandlers.MenuSettingHandlers.CounterSettingsHandler",
        "Icon": "BLPPCounter.Images.pp.png"
      }
    }
  }
}
